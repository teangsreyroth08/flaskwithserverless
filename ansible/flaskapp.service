[Unit]
Description=Gunicorn service for Flask app
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/flaskapp
Environment="PATH=/opt/flaskapp/venv/bin"
ExecStart=/opt/flaskapp/venv/bin/gunicorn --bind 127.0.0.1:8000 app:application
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
